<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="english.tenses.practice">

<!--    <uses-permission android:name="android.permission.INTERNET"/>-->

    <application
        android:name="english.tenses.practice.view.App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.AchievementsActivity"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.TheoryActivity"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.ExamActivity"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.IrregularVerbsActivity"
            android:theme="@style/WhiteStatusBarTheme" />
        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.TrainingActivity"
            android:theme="@style/WhiteStatusBarTheme" />


        <activity
            android:screenOrientation="portrait"
            android:name="english.tenses.practice.view.activities.MainActivity"
            android:theme="@style/WhiteStatusBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>